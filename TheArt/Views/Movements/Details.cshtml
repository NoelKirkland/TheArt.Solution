@{
  Layout = "_Layout";
}

@using TheArt.Models;
@model TheArt.Models.Movement;

<h1>Movement Details</h1>
<hr />
<h2>@Html.DisplayNameFor(model => model.MovementName): @Html.DisplayFor(model => model.MovementName)</h2>

@if(@Model.Artists.Count() == 0)
{
  <p>There are no artists listed yet</p>
}
else
{
  <h4>Movements:</h4>
  <ul>
    @foreach(var join in Model.Artists)
    {
    <li>@Html.ActionLink($"{join.Artist.ArtistName}", "Details", "Artists", new { id = @join.Artist.ArtistId })</li> 
    }
  </ul>
}

<p>@Html.ActionLink("Edit This movement", "Edit", new { id = Model.MovementId })</p>
<p>@Html.ActionLink("Delete This movement", "Delete", new { id = Model.MovementId })</p>
<p>@Html.ActionLink("movement list", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>