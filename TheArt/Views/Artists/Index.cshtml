@{
  Layout = "_Layout";
}

@using TheArt.Models;
@model List<TheArt.Models.Artist>;


<h1>Artists</h1>

@if(@Model.Count() == 0)
{
  <h3>there are no artists</h3>
}
else
{
  <ul>
    @foreach(Artist artist in Model)
    {
      <li>@Html.ActionLink($"{artist.ArtistName}", "Details", new { id = artist.ArtistId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add an artist", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>